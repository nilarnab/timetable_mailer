<%- include('./components/header.ejs') %>

<style>

    *
    {
        color: rgb(118, 118, 118);
    }

    .container {
        width: 90%;
        margin: auto;
    }

    .add_teacher
    {
        padding: 50px;
        border-radius: 20px;
        box-shadow: 0px 0px 5px grey;
    }

    .line
    {
        width: 60%;
        margin: auto;
        height: 1px;
        background-color: black;
    }

</style>


<div class="container">


    <div align="center">
        <h2>Custom Mail Sender</h2>
        <p>Sending catagorywise mail</p>
        
        <p>Task Verdict: <%= message %> </p>
    </div>

    <div class="line"></div>

    <br><br>

    
    <form action="/admin/handle_custom_mail" method="post">
        
        <textarea id="summernote" name="body" placeholder="">Hi<br>Here is your fresh study material</textarea>

        <p>Colleges</p>
        <select name="college">
            <% colleges.forEach((college, index) =>
        {
            %>
            <option value="<%= college._id.toString() %>"><%= college.name %></option>></option>
            <%
        }) %>
        <option value="all">All</option>
        </select>

        <p>Branch</p>
        <select name="branch">
            <% branches.forEach((branch, index) =>
        {
            %>
            <option value="<%= branch._id.toString() %>"><%= branch.short_name %></option>
            <%
        }) %>
        <option value="all">All</option>

        </select>

        <p>Years</p>
        <select name="year">
            <% years.forEach((year, index) =>
        {
            %>
            <option value="<%= year._id.toString() %>"><%= year.name %></option>
            <%
        }) %>
        <option value="all">All</option>
        </select>

        <button class="btn btn-default">Submit</button>

    </form>

    <script>
        $(document).ready(function() {
            $('#summernote').summernote();
        });
    </script>


</div>